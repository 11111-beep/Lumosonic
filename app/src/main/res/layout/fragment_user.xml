<?xml version="1.0" encoding="utf-8"?>
<!--
  主要改动:
  1. 在根布局 ConstraintLayout 中添加 android:fitsSystemWindows="true"。
     这会让根布局自动处理系统栏（如状态栏）的边距，确保你的可交互UI元素不会被遮挡。
  2. 移除了 ImageView (id: iv_banner) 中的 android:fitsSystemWindows="true"。
     这样横幅图片就会直接延伸到屏幕顶部，绘制在状态栏的后面。
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xnt_color"
    tools:context=".ui.user.UserFragment">

    <!-- 顶部背景横幅 -->
    <ImageView
        android:id="@+id/iv_banner"
        android:layout_width="0dp"
        android:layout_height="270dp"
        android:scaleType="centerCrop"
        android:src="@drawable/music_player"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_avatar"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:padding="4dp"
        android:src="@drawable/tou_1"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_banner"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
        app:strokeColor="@android:color/white"
        app:strokeWidth="2dp"
        tools:srcCompat="@tools:sample/avatars" />

    <!-- 新拟态风格的用户名 -->
    <soup.neumorphism.NeumorphTextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:text="喜欢沫雨"
        android:textColor="@color/xnt_color"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@+id/iv_avatar"
        app:layout_constraintStart_toStartOf="@+id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@+id/iv_avatar"
        app:neumorph_shadowElevation="2dp" />


    <!-- 选项列表容器 -->
    <LinearLayout
        android:id="@+id/ll_options_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_username">

        <!-- 选项: 我喜欢 -->
        <soup.neumorphism.NeumorphCardView
            android:id="@+id/option_favorites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            app:neumorph_shadowElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_heart"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="我喜欢"
                    android:textColor="#C5C5D0"
                    android:textSize="18sp" />


            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/option_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            app:neumorph_shadowElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_local"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="本地音乐"
                    android:textColor="#C5C5D0"
                    android:textSize="18sp" />


            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/option_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp"
            android:layout_marginVertical="5dp"
            app:neumorph_shadowElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_close" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="退出应用"
                    android:textColor="#C5C5D0"
                    android:textSize="18sp" />


            </LinearLayout>
        </soup.neumorphism.NeumorphCardView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:contentDescription="动画"
            app:lottie_rawRes="@raw/cat"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
